@model IEnumerable<WebApplication.Models.Unit>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UnitName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitCommencementDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UnitEndDate)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitCommencementDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitEndDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UnitId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UnitId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.UnitId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
