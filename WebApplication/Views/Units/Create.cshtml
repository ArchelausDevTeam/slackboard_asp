@model WebApplication.Models.Unit

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <div class="jumbotron">
            <h2>Create a Unit</h2>
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="UnitName" class="control-label"></label>
                    <input asp-for="UnitName" class="form-control" />
                    <span asp-validation-for="UnitName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnitDescription" class="control-label"></label>
                    <input asp-for="UnitDescription" class="form-control" />
                    <span asp-validation-for="UnitDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnitCommencementDate" class="control-label"></label>
                    <input asp-for="UnitCommencementDate" class="form-control" />
                    <span asp-validation-for="UnitCommencementDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UnitEndDate" class="control-label"></label>
                    <input asp-for="UnitEndDate" class="form-control" />
                    <span asp-validation-for="UnitEndDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
        
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
